<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="authorization.client_id" />
        <parameter key="authorization.client_secret" />
        <parameter key="authorization.url_authorize" />
        <parameter key="authorization.url_access_token" />
        <parameter key="authorization.url_resource_owner_details" />
    </parameters>
    <services>
        <!-- LogService -->
        <service id="authorization.service" class="Mixasmix\AuthBundle\\Service\AuthService">
            <argument key="$authClientId" type="string">%authorization.client_id%</argument>
            <argument key="$authClientSecret" type="string">%authorization.client_secret%</argument>
            <argument key="$authUrlAuthoruze" type="string">%authorization.url_authorize%</argument>
            <argument key="$authUrlAccessToken" type="string">%authorization.url_access_token%</argument>
            <argument key="$authUrlResourcesOwnerDetails" type="string">%authorization.url_resource_owner_details%</argument>
        </service>

        <service id="Mixasmix\AuthBundle\\Service\AuthService" alias="authorization.service" />
        <!-- End LogService -->
    </services>
</container>