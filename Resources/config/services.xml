<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="auth.service_url" />
        <parameter key="auth.client_id" />
        <parameter key="auth.client_secret" />
        <parameter key="auth.url_authorize" />
        <parameter key="auth.url_access_token" />
        <parameter key="auth.url_resource_owner_details" />
        <parameter key="auth.redirect_uri" />
    </parameters>
    <services>
        <!-- LogService -->
        <service id="auth.service" class="Mixasmix\AuthBundle\Service\AuthService">
            <argument key="$authServiceUrl" type="string">%auth.service_url%</argument>
            <argument key="$authClientId" type="string">%auth.client_id%</argument>
            <argument key="$authClientSecret" type="string">%auth.client_secret%</argument>
            <argument key="$authUrlAuthorize" type="string">%auth.url_authorize%</argument>
            <argument key="$authUrlAccessToken" type="string">%auth.url_access_token%</argument>
            <argument key="$authUrlResourcesOwnerDetails" type="string">%auth.url_resource_owner_details%</argument>
            <argument key="$redirectUrl" type="string">%auth.redirect_uri%</argument>
        </service>

        <service id="Mixasmix\AuthBundle\Service\AuthService" alias="auth.service" />
        <!-- End LogService -->
    </services>
</container>