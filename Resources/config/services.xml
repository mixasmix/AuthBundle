<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="prodavay_auth.url" />
    </parameters>
    <services>
        <!-- LogService -->
        <service id="prodavay_auth.service" class="Mixasmix\AuthBundle\Service\AuthService">
            <argument key="$authProdavayApiUrl" type="string">%prodavay_auth.url%</argument>
            <argument key="$logger" type="service" id="prodavay_graylog.service"/>
        </service>

        <service id="Mixasmix\AuthBundle\Service\AuthService" alias="prodavay_auth.service" />
        <!-- End LogService -->
    </services>
</container>